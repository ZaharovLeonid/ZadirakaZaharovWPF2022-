<Window x:Class="FontSizeResources__chapter_21_.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FontSizeResources__chapter_21_"
        mc:Ignorable="d"
        Title="GradientBrushResourceDemo" Height="450" Width="800">
    <ResourceDictionary         
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"         
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
        <!---LinearGradientBrush позволяет создавать смешанное заполнение, переход от одного цвета к другому-->
        <LinearGradientBrush x:Key="brushLinear">
            <LinearGradientBrush.GradientStops>
                <!--Цвета для перехода-->
                <GradientStop Color="Pink" Offset="0" />
                <GradientStop Color="Aqua" Offset="1" />
            </LinearGradientBrush.GradientStops>
        </LinearGradientBrush>
    </ResourceDictionary>
</Window>
